<?xml version="1.0" encoding="utf-8"?>
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.priya.ck.weekuk.SignupActivity"
        android:background="@drawable/backgroundplain_image">

    <ImageView
        android:id="@+id/imageView_signup1"
        android:layout_width="86dp"
        android:layout_height="80dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.033"
        app:srcCompat="@drawable/weekuklogo1" />

    <ImageView
        android:id="@+id/imageView_signup2"
        android:layout_width="163dp"
        android:layout_height="56dp"
        android:layout_marginBottom="412dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_signup1"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/weekuklogo2" />

    <!--Dummy layout added to take auto focus off the edit text-->
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px"/>

    <EditText
        android:id="@+id/txt_signupemail"
        android:layout_width="289dp"
        android:layout_height="46dp"
        android:backgroundTint="@color/light_colour"
        android:ems="15"
        android:inputType="textPersonName"
        android:hint="@string/txt_login_email"
        android:textColor="@color/light_colour"
        android:textColorHint="@drawable/edittextselector"
        android:textCursorDrawable="@color/light_colour"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_signup2"
        app:layout_constraintVertical_bias="0.046" />

    <EditText
        android:id="@+id/txt_signuppassword"
        android:layout_width="286dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/light_colour"
        android:ems="15"
        android:hint="@string/txt_login_pwd"
        android:inputType="textPassword"
        android:textColor="@color/light_colour"
        android:textColorHint="@drawable/edittextselector"
        android:textCursorDrawable="@color/light_colour"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_signupemail"
        app:layout_constraintVertical_bias="0.049" />

    <EditText
        android:id="@+id/txt_signup_confirmpassword"
        android:layout_width="286dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/light_colour"
        android:ems="15"
        android:hint="@string/txt_login_confpwd"
        android:inputType="textPassword"
        android:textColor="@color/light_colour"
        android:textColorHint="@drawable/edittextselector"
        android:textCursorDrawable="@color/light_colour"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_signuppassword"
        app:layout_constraintVertical_bias="0.059" />

    <Button
        android:id="@+id/btn_NewuserSignUp"
        android:layout_width="290dp"
        android:layout_height="39dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/border_loginbtn"
        android:elevation="12dp"
        android:text="@string/txt_signup"
        android:textColor="@color/light_colour"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_signup_confirmpassword"
        app:layout_constraintVertical_bias="0.051" />

    <TextView
        android:id="@+id/txt_contactsupport"
        android:layout_width="293dp"
        android:layout_height="34dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/txt_contactsupport"
        android:textColor="@color/light_colour"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_NewuserSignUp"
        app:layout_constraintVertical_bias="0.082" />

    <TextView
        android:id="@+id/txt_signin_already"
        android:layout_width="283dp"
        android:layout_height="32dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/txt_alreadysignin"
        android:textColor="@color/light_colour"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_contactsupport"
        app:layout_constraintVertical_bias="0.507" />

    </android.support.constraint.ConstraintLayout>